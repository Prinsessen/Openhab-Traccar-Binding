			<channel id="obdRpmReported" typeId="obd-rpm-reported"/>
			<channel id="obdSpeed" typeId="obd-speed"/>
			<channel id="obdFuelLevel" typeId="obd-fuel-level"/>
			<channel id="obdOemOdometer" typeId="obd-oem-odometer"/>
