			<channel id="beacon2-rssi" typeId="beacon-rssi"/>
			<channel id="beacon2-distance" typeId="beacon-distance"/>
			<channel id="beacon2-mac" typeId="beacon-mac"/>
			<channel id="beacon2-battery" typeId="beacon-battery"/>
			<channel id="beacon2-lowBattery" typeId="beacon-lowBattery"/>
			<channel id="beacon2-name" typeId="beacon-name"/>
			<channel id="beacon2-temperature" typeId="beacon-temperature"/>
			<channel id="beacon2-humidity" typeId="beacon-humidity"/>
			<channel id="beacon2-magnet" typeId="beacon-magnet"/>
			<channel id="beacon2-motion" typeId="beacon-motion"/>
			<channel id="beacon2-motionCount" typeId="beacon-motionCount"/>
			<channel id="beacon2-pitch" typeId="beacon-pitch"/>
			<channel id="beacon2-roll" typeId="beacon-roll"/>
			<!-- Beacon 3 Channels (Teltonika FMM920 optional BLE accessory) -->
			<channel id="beacon3-rssi" typeId="beacon-rssi"/>
			<channel id="beacon3-distance" typeId="beacon-distance"/>
			<channel id="beacon3-mac" typeId="beacon-mac"/>
			<channel id="beacon3-battery" typeId="beacon-battery"/>
			<channel id="beacon3-lowBattery" typeId="beacon-lowBattery"/>
			<channel id="beacon3-name" typeId="beacon-name"/>
			<channel id="beacon3-temperature" typeId="beacon-temperature"/>
			<channel id="beacon3-humidity" typeId="beacon-humidity"/>
			<channel id="beacon3-magnet" typeId="beacon-magnet"/>
			<channel id="beacon3-motion" typeId="beacon-motion"/>
			<channel id="beacon3-motionCount" typeId="beacon-motionCount"/>
			<channel id="beacon3-pitch" typeId="beacon-pitch"/>
			<channel id="beacon3-roll" typeId="beacon-roll"/>
			<!-- Beacon 4 Channels (Teltonika FMM920 optional BLE accessory) -->
			<channel id="beacon4-rssi" typeId="beacon-rssi"/>
			<channel id="beacon4-distance" typeId="beacon-distance"/>
			<channel id="beacon4-mac" typeId="beacon-mac"/>
			<channel id="beacon4-battery" typeId="beacon-battery"/>
			<channel id="beacon4-lowBattery" typeId="beacon-lowBattery"/>
			<channel id="beacon4-name" typeId="beacon-name"/>
			<channel id="beacon4-temperature" typeId="beacon-temperature"/>
			<channel id="beacon4-humidity" typeId="beacon-humidity"/>
