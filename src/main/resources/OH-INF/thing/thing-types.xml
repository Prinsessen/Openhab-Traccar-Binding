			<channel id="beacon1-distance" typeId="beacon-distance"/>
			<channel id="beacon1-mac" typeId="beacon-mac"/>
			<channel id="beacon1-battery" typeId="beacon-battery"/>
			<channel id="beacon1-lowBattery" typeId="beacon-lowBattery"/>
			<channel id="beacon1-name" typeId="beacon-name"/>
			<channel id="beacon1-temperature" typeId="beacon-temperature"/>
			<channel id="beacon1-humidity" typeId="beacon-humidity"/>
